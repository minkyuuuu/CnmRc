<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#30000000" >

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="66" >
    </View>

    <LinearLayout
        android:layout_width="@dimen/px592"
        android:layout_height="@dimen/px418"
        android:layout_gravity="center"
        android:background="@drawable/popup_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px86" >

            <ImageView
                android:id="@+id/popup_progressbar"
                android:layout_width="@dimen/px70"
                android:layout_height="@dimen/px70"
                android:layout_marginLeft="@dimen/px10"
                android:layout_centerVertical="true"
                android:background="@drawable/anim_gtv_progressbar"
                android:visibility="invisible"
                >
            </ImageView>

            <TextView
                android:id="@+id/popup_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/popup_search_title"
                android:textColor="#ff7961aa"
                android:textSize="@dimen/sp36"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px230"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/popup_line_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/popup_search_line_1"
                android:singleLine="true"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp36" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px70"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >
            </View>

            <Button
                android:id="@+id/popup_yes"
                android:layout_width="@dimen/px256"
                android:layout_height="@dimen/px70"
                android:background="@drawable/xml_popup_btn"
                android:text="@string/search_recently_delete"
                android:textColor="@drawable/xml_search_recently_delete_textcolor"
                android:textSize="@dimen/sp30" />

            <View
                android:layout_width="@dimen/px12"
                android:layout_height="match_parent" >
            </View>

            <Button
                android:id="@+id/popup_no"
                android:layout_width="@dimen/px256"
                android:layout_height="@dimen/px70"
                android:background="@drawable/xml_popup_btn"
                android:text="@string/search_recently_delete"
                android:textColor="@drawable/xml_search_recently_delete_textcolor"
                android:textSize="@dimen/sp30" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >
            </View>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px32" >
        </View>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="62" >
    </View>

</LinearLayout>