<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px100"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px98" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px30"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/config_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="강남"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp32" />

            <TextView
                android:id="@+id/config_region_gu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="강남구"
                android:textColor="#ff797979"
                android:textSize="@dimen/sp22" />
        </LinearLayout>

        <RadioButton
            android:id="@+id/config_region_radio"
            android:layout_width="@dimen/px56"
            android:layout_height="@dimen/px56"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px30"
            android:background="@drawable/xml_config_radio"
            android:button="@null"
            android:checked="false"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center" />
    </RelativeLayout>

    <!-- horizontal delimiter (2 pixel) -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2"
        android:background="@drawable/list_line" />

</LinearLayout>