<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px110"
    android:background="#ff7961aa" >

    <TextView
        android:id="@+id/vod_tvch_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/px10"
        android:gravity="center"
        android:singleLine="true"
        android:text="예고편"
        android:textColor="#ffffffff"
        android:textSize="@dimen/sp45"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="@dimen/px206"
        android:layout_height="@dimen/px94"
        android:layout_gravity="right|center_vertical"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/vod_tvch_top_search"
            android:layout_width="@dimen/px98"
            android:layout_height="@dimen/px94"
            android:layout_marginRight="@dimen/px10"
            android:background="@drawable/xml_rc_base_top"
            android:contentDescription="@string/accessibility_search"
            android:src="@drawable/top_icon_search" />

        <ImageButton
            android:id="@+id/vod_tvch_top_category"
            android:layout_width="@dimen/px98"
            android:layout_height="@dimen/px94"
            android:background="@drawable/xml_rc_base_top"
            android:contentDescription="@string/accessibility_vod_big_list"
            android:src="@drawable/top_icon_list" />
    </LinearLayout>

</FrameLayout>