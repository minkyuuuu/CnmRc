<?xml version="1.0" encoding="utf-8"?>
<com.cnm.cnmrc.slidingmenu.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/animation_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="@dimen/px290"
        android:layout_height="match_parent"
        android:background="#ff484748"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/sidebar_list"
            android:layout_width="match_parent"
            android:layout_height="0dp" 
            android:layout_weight="1"
            android:listSelector="@drawable/aaa"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px90"
            android:background="#80ff0000" >
        </FrameLayout>
    </LinearLayout>

    <!-- VOD 메인메뉴 -->

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/repeat_main_numeric_pad"
        android:orientation="vertical" >

        <fragment
            android:id="@+id/vod_top_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px110"
            class="com.cnm.cnmrc.fragment.vod.VodTopMenu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px68"
            android:background="#ffbababa"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/vod_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px24"
                android:gravity="left|center"
                android:text="@string/vod_main_title_1"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp17"
                android:textStyle="bold" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/vod_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px90"
            android:background="#80ff0000" >
        </FrameLayout>
    </LinearLayout>

</com.cnm.cnmrc.slidingmenu.SlidingMenu>