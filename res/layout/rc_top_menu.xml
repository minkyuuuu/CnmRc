<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px110"
    android:background="#ff7961aa"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/stb_power"
        android:layout_width="@dimen/px98"
        android:layout_height="@dimen/px94"
        android:layout_marginLeft="@dimen/px27"
        android:background="@drawable/main_top_stb_power"
        android:contentDescription="@string/accessibility_stb_power" />

    <ImageButton
        android:id="@+id/integration_ui_main"
        android:layout_width="@dimen/px98"
        android:layout_height="@dimen/px94"
        android:layout_marginLeft="@dimen/px16"
        android:background="@drawable/main_top_integration_ui_main"
        android:contentDescription="@string/accessibility_integration_ui_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px94"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/vod"
            android:layout_width="@dimen/px98"
            android:layout_height="@dimen/px94"
            android:layout_marginRight="@dimen/px10"
            android:background="@drawable/main_base_top_icon"
            android:contentDescription="@string/accessibility_vod"
            android:src="@drawable/top_icon_vod" />

        <ImageButton
            android:id="@+id/tvch"
            android:layout_width="@dimen/px98"
            android:layout_height="@dimen/px94"
            android:layout_marginRight="@dimen/px10"
            android:background="@drawable/main_base_top_icon"
            android:contentDescription="@string/accessibility_ch"
            android:src="@drawable/top_icon_ch" />

        <ImageButton
            android:id="@+id/vod_top_search"
            android:layout_width="@dimen/px98"
            android:layout_height="@dimen/px94"
            android:background="@drawable/main_base_top_icon"
            android:contentDescription="@string/accessibility_search"
            android:src="@drawable/top_icon_search" />
    </LinearLayout>

</LinearLayout>