<?xml version="1.0" encoding="utf-8"?>
<com.cnm.cnmrc.custom.CheckableLinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cnmrc="http://schemas.android.com/apk/res/com.cnm.cnmrc"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px100"
    cnmrc:checkable="@+id/config_product_radio"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px98" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px20"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/config_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="HD실속형"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp32" />

        </LinearLayout>

        <RadioButton
            android:id="@+id/config_product_radio"
            android:layout_width="@dimen/px56"
            android:layout_height="@dimen/px56"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px20"
            android:background="@drawable/xml_config_radio"
            android:button="@null"
            android:checked="false"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center" />
    </RelativeLayout>

    <!-- horizontal delimiter (2 pixel) -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2"
        android:background="@drawable/list_line" />

</com.cnm.cnmrc.custom.CheckableLinearLayout>