<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px108"
    android:background="@drawable/m_vod_timeline_bg"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px10" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px98" >

        <ImageButton
            android:id="@+id/mirroring_vod_vol"
            android:layout_width="@dimen/px98"
            android:layout_height="@dimen/px78"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px25"
            android:background="@drawable/xml_mirroring_vod_vol"
            android:contentDescription="@string/accessibility_no_action" >
        </ImageButton>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px78"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/mirroring_vod_rew"
                android:layout_width="@dimen/px110"
                android:layout_height="@dimen/px78"
                android:layout_marginRight="@dimen/px20"
                android:background="@drawable/xml_mirroring_vod_rew"
                android:contentDescription="@string/accessibility_no_action" >
            </ImageButton>

            <ImageButton
                android:id="@+id/mirroring_vod_pause"
                android:layout_width="@dimen/px110"
                android:layout_height="@dimen/px78"
                android:layout_marginRight="@dimen/px20"
                android:background="@drawable/xml_mirroring_vod_pause"
                android:contentDescription="@string/accessibility_no_action" >
            </ImageButton>

            <ImageButton
                android:id="@+id/mirroring_vod_stop"
                android:layout_width="@dimen/px110"
                android:layout_height="@dimen/px78"
                android:layout_marginRight="@dimen/px20"
                android:background="@drawable/xml_mirroring_vod_stop"
                android:contentDescription="@string/accessibility_no_action" >
            </ImageButton>

            <ImageButton
                android:id="@+id/mirroring_vod_ff"
                android:layout_width="@dimen/px110"
                android:layout_height="@dimen/px78"
                android:background="@drawable/xml_mirroring_vod_ff"
                android:contentDescription="@string/accessibility_no_action" >
            </ImageButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px25"
            android:background="#300000ff"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mirroring_vod_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="50:00"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=" / "
                android:textColor="#ff7961aa"
                android:textSize="@dimen/sp24" />

            <TextView
                android:id="@+id/mirroring_vod_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="90:00"
                android:textColor="#ff7961aa"
                android:textSize="@dimen/sp24" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>