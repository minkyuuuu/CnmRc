<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px31" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <View
            android:layout_width="@dimen/px26"
            android:layout_height="match_parent" />

        <RelativeLayout
             android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" 
            android:background="@drawable/pad">

            <!-- 1) play -->

            <FrameLayout
                android:layout_width="@dimen/px160"
                android:layout_height="@dimen/px160"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" 
                android:layout_marginTop="@dimen/px66">

                <com.cnm.cnmrc.custom.ExtendedImageButton
                    android:id="@+id/trick_play"
                    android:layout_width="@dimen/px160"
                    android:layout_height="@dimen/px160"
                    android:layout_gravity="center"
                    android:background="@drawable/xml_tricky_play"
                    android:contentDescription="@string/accessibility_general_button" />

                <ImageView
                    android:id="@+id/anim_trick_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/anim_tappress"
                    android:contentDescription="@string/accessibility_general_button"
                    android:visibility="invisible" />
            </FrameLayout>

            <!-- 2) ff -->

            <FrameLayout
                android:layout_width="@dimen/px160"
                android:layout_height="@dimen/px160"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" 
                android:layout_marginRight="@dimen/px66">

                <com.cnm.cnmrc.custom.ExtendedImageButton
                    android:id="@+id/tricky_ff"
                    android:layout_width="@dimen/px160"
                    android:layout_height="@dimen/px160"
                    android:layout_gravity="center"
                    android:background="@drawable/xml_tricky_ff"
                    android:contentDescription="@string/accessibility_general_button" />

                <ImageView
                    android:id="@+id/anim_tricky_ff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/anim_tappress"
                    android:contentDescription="@string/accessibility_general_button"
                    android:visibility="invisible" />
            </FrameLayout>

            <!-- 3) stop -->

            <FrameLayout
                android:layout_width="@dimen/px160"
                android:layout_height="@dimen/px160"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" 
                android:layout_marginBottom="@dimen/px67">

                <com.cnm.cnmrc.custom.ExtendedImageButton
                    android:id="@+id/tricky_stop"
                    android:layout_width="@dimen/px160"
                    android:layout_height="@dimen/px160"
                    android:layout_gravity="center"
                    android:background="@drawable/xml_tricky_stop"
                    android:contentDescription="@string/accessibility_general_button" />

                <ImageView
                    android:id="@+id/anim_tricky_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/anim_tappress"
                    android:contentDescription="@string/accessibility_general_button"
                    android:visibility="invisible" />
            </FrameLayout>

            <!-- 4) rew -->

            <FrameLayout
                android:layout_width="@dimen/px160"
                android:layout_height="@dimen/px160"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" 
                android:layout_marginLeft="@dimen/px66">

                <com.cnm.cnmrc.custom.ExtendedImageButton
                    android:id="@+id/tricky_rew"
                    android:layout_width="@dimen/px160"
                    android:layout_height="@dimen/px160"
                    android:layout_gravity="center"
                    android:background="@drawable/xml_tricky_rew"
                    android:contentDescription="@string/accessibility_general_button" />

                <ImageView
                    android:id="@+id/anim_tricky_rew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
					android:layout_gravity="center"
                    android:background="@drawable/anim_tappress"
                    android:contentDescription="@string/accessibility_general_button"
                    android:visibility="invisible" />
            </FrameLayout>

            <!-- pause -->

            <FrameLayout
                android:layout_width="@dimen/px138"
                android:layout_height="@dimen/px138"
                android:layout_centerInParent="true" >

                <com.cnm.cnmrc.custom.ExtendedImageButton
                    android:id="@+id/tricky_pause"
                    android:layout_width="@dimen/px138"
                    android:layout_height="@dimen/px138"
                    android:layout_gravity="center"
                    android:background="@drawable/xml_tricky_pause"
                    android:contentDescription="@string/accessibility_general_button" />

                <ImageView
                    android:id="@+id/anim_tricky_pause"
                    android:layout_width="@dimen/px130"
                    android:layout_height="@dimen/px130"
                    android:layout_gravity="center"
                    android:background="@drawable/anim_tappress"
                    android:contentDescription="@string/accessibility_general_button"
                    android:visibility="invisible" />
            </FrameLayout>
        </RelativeLayout>

        <View
            android:layout_width="@dimen/px26"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px30" />

</LinearLayout>