<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- horizontal delimiter (2 pixel) -->

    <ImageView
        android:id="@+id/top_delimiter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2"
        android:background="@drawable/list_line"
        android:contentDescription="@string/accessibility_no_action" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px142" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px142"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/title_res_id"
                android:layout_width="@dimen/px106"
                android:layout_height="@dimen/px142"
                android:layout_marginLeft="@dimen/px20"
                android:background="@null"
                android:contentDescription="@string/accessibility_no_action" />

            <!-- 3 lines -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px142"
                android:layout_marginLeft="@dimen/px20"
                android:orientation="vertical" >

                <!-- 1st of 3rd -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="58"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:singleLine="true"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/sp20"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/hdicon_res_id"
                        android:layout_width="@dimen/px66"
                        android:layout_height="@dimen/px40"
                        android:layout_marginLeft="@dimen/px20"
                        android:background="@null"
                        android:contentDescription="@string/accessibility_no_action" />

                    <ImageView
                        android:id="@+id/age_res_id"
                        android:layout_width="@dimen/px40"
                        android:layout_height="@dimen/px40"
                        android:layout_marginLeft="@dimen/px14"
                        android:background="@null"
                        android:contentDescription="@string/accessibility_no_action" />
                </LinearLayout>
                <!-- 2nd of 3rd -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="40"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/director"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:singleLine="true"
                        android:textColor="#ff797979"
                        android:textSize="@dimen/sp15"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/director_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:singleLine="true"
                        android:textColor="#ff797979"
                        android:textSize="@dimen/sp15"
                        android:textStyle="bold" />
                </LinearLayout>
                <!-- 3rd of 3rd -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="40"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/cast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:singleLine="true"
                        android:textColor="#ff797979"
                        android:textSize="@dimen/sp15"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/cast_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:singleLine="true"
                        android:textColor="#ff797979"
                        android:textSize="@dimen/sp15"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/px16"
                    android:layout_height="0dp"
                    android:layout_weight="4" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/px16"
            android:layout_height="@dimen/px29"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px36"
            android:background="@drawable/indicator_normal"
            android:contentDescription="@string/accessibility_no_action" />
    </RelativeLayout>

    <!-- horizontal delimiter (2 pixel) -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2"
        android:background="@drawable/list_line"
        android:contentDescription="@string/accessibility_no_action" />

</LinearLayout>