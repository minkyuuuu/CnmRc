<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">

    <com.cnm.cnmrc.custom.ExtendedEditText
        android:id="@+id/qwerty_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/qwerty_hint"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:singleLine="true" />

    <RelativeLayout
        android:id="@+id/keyboard_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <com.google.android.apps.tvremote.widget.ImeInterceptView
            android:id="@+id/keyboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/touchpad"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <ImageView
            android:id="@+id/touch_pad_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/touchpad_icon" />

        <com.google.android.apps.tvremote.widget.FadingTextView
            android:id="@+id/text_feedback_chars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:ellipsize="start"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:lines="1"
            android:padding="20dp"
            android:scrollHorizontally="false"
            android:singleLine="true"
            android:textSize="@dimen/px60"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>