<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px100"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px98"
        android:layout_marginLeft="@dimen/px82" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px40"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text="13:20"
                android:textColor="#ff797979"
                android:textSize="@dimen/sp32" />

            <TextView
                android:id="@+id/current_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text="스마일"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp32" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px20"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/hdicon_res_id"
                    android:layout_width="@dimen/px66"
                    android:layout_height="@dimen/px40"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:contentDescription="@string/accessibility_no_action" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/px16"
            android:layout_height="@dimen/px29"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/px36"
            android:background="@drawable/indicator_normal"
            android:contentDescription="@string/accessibility_no_action"
            android:visibility="invisible" />
    </FrameLayout>

    <!-- horizontal delimiter (2 pixel) -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2"
        android:background="@drawable/list_line"
        android:contentDescription="@string/accessibility_no_action" />

</LinearLayout>