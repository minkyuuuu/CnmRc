<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px100"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px98"
        android:layout_marginLeft="@dimen/px30" >

        <LinearLayout
            android:id="@+id/linear_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/broadcasting_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px15"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text="13:20"
                android:textColor="#ff797979"
                android:textSize="@dimen/sp30" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:maxWidth="@dimen/px364"
                android:singleLine="true"
                android:text="스마일"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp30" />
        </LinearLayout>

        <ImageView
            android:id="@+id/hd_icon"
            android:layout_width="@dimen/px66"
            android:layout_height="@dimen/px40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px20"
            android:layout_toRightOf="@id/linear_current_time"
            android:background="@drawable/hd_icon"
            android:contentDescription="@string/accessibility_no_action" />

        <ImageView
            android:id="@+id/grade_icon"
            android:layout_width="@dimen/px40"
            android:layout_height="@dimen/px40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px14"
            android:layout_toRightOf="@id/hd_icon"
            android:background="@null"
            android:contentDescription="@string/accessibility_no_action" />

        <ImageView
            android:layout_width="@dimen/px16"
            android:layout_height="@dimen/px29"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px30"
            android:background="@drawable/indicator_normal"
            android:contentDescription="@string/accessibility_no_action"
            android:visibility="visible" />
    </RelativeLayout>

    <!-- horizontal delimiter (2 pixel) -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2"
        android:background="@drawable/list_line"
        android:contentDescription="@string/accessibility_no_action" />

</LinearLayout>