<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px100"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px98"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="@dimen/px65"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px10"
            android:layout_marginRight="@dimen/px10" >

            <TextView
                android:id="@+id/channel_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text="9"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp35"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/px128"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/px22"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/tvchicon_res_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/sbs_icon"
                android:contentDescription="@string/accessibility_no_action" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px44"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/current_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:singleLine="true"
                        android:text="13:20"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/sp32" />

                    <TextView
                        android:id="@+id/current_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:singleLine="true"
                        android:text="스마일"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/sp32" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px36"
                    android:layout_marginLeft="@dimen/px3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/next_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:singleLine="true"
                        android:text="13:40"
                        android:textColor="#ff797979"
                        android:textSize="@dimen/sp22" />

                    <TextView
                        android:id="@+id/next_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:singleLine="true"
                        android:text="(자막)우리동네이모저모"
                        android:textColor="#ff797979"
                        android:textSize="@dimen/sp22" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/px16"
                android:layout_height="@dimen/px29"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/px36"
                android:background="@drawable/indicator_normal"
                android:contentDescription="@string/accessibility_no_action" />
        </FrameLayout>
        <!-- horizontal delimiter (2 pixel) -->
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2"
        android:background="@drawable/list_line"
        android:contentDescription="@string/accessibility_no_action" />

</LinearLayout>