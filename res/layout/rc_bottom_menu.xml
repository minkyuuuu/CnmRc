<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px90" >

    <!-- for rc -->
    <LinearLayout
        android:id="@+id/bottom_remocon_mode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffefefef"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/previous"
            android:layout_width="@dimen/px64"
            android:layout_height="@dimen/px64"
            android:layout_marginLeft="@dimen/px27"
            android:background="@drawable/main_base_bottom_icon"
            android:contentDescription="@string/accessibility_general_button"
            android:src="@drawable/bottom_icon_pre" />

        <ImageButton
            android:id="@+id/favorite_channel"
            android:layout_width="@dimen/px132"
            android:layout_height="@dimen/px64"
            android:layout_marginLeft="@dimen/px27"
            android:background="@drawable/main_base_favorite_channel"
            android:contentDescription="@string/accessibility_general_button"
            android:src="@drawable/bottom_icon_green" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px64"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/view_switch"
                android:layout_width="@dimen/px132"
                android:layout_height="@dimen/px64"
                android:layout_marginRight="@dimen/px34"
                android:background="@drawable/main_base_view_switch"
                android:contentDescription="@string/accessibility_general_button"
                android:src="@drawable/bottom_icon_yellow" />

            <ImageButton
                android:id="@+id/exit"
                android:layout_width="@dimen/px64"
                android:layout_height="@dimen/px64"
                android:layout_marginRight="@dimen/px27"
                android:background="@drawable/main_base_bottom_icon"
                android:contentDescription="@string/accessibility_general_button"
                android:src="@drawable/bottom_icon_out" />
        </LinearLayout>
    </LinearLayout>

    
    <!-- for vod and tvch -->
    <LinearLayout
        android:id="@+id/bottom_vod_tvch_mode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90efefef"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/px246"
            android:layout_height="@dimen/px20"
            android:layout_marginLeft="@dimen/px24"
            android:background="@drawable/cnmremotecontrol"
            android:contentDescription="@string/accessibility_no_action" />
        
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/px20"
            android:layout_weight="1"
            />

        <LinearLayout
            android:id="@+id/indicator_depth"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px20"
            android:layout_gravity="right|center_vertical"
            android:gravity="right"
            android:layout_marginRight="@dimen/px24"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/indicator_depth_8"
                android:layout_width="@dimen/px20"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px4"
                android:background="#ffff00ff"
                android:visibility="visible"
                android:contentDescription="@string/accessibility_no_action"
                />

            <ImageView
                android:id="@+id/indicator_depth_7"
                android:layout_width="@dimen/px20"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px4"
                android:background="#ffff0000"
                android:visibility="visible"
                android:contentDescription="@string/accessibility_no_action"
                />

            <ImageView
                android:id="@+id/indicator_depth_6"
                android:layout_width="@dimen/px20"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px4"
                android:background="#ffff0000"
                android:visibility="visible"
                android:contentDescription="@string/accessibility_no_action"
                />

            <ImageView
                android:id="@+id/indicator_depth_5"
                android:layout_width="@dimen/px20"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px4"
                android:background="#ffff0000"
                android:visibility="visible"
                android:contentDescription="@string/accessibility_no_action"
                />

            <ImageView
                android:id="@+id/indicator_depth_4"
                android:layout_width="@dimen/px20"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px4"
                android:background="#ffff0000"
                android:visibility="visible"
                android:contentDescription="@string/accessibility_no_action"
                />

            <ImageView
                android:id="@+id/indicator_depth_3"
                android:layout_width="@dimen/px20"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px4"
                android:background="#ffff0000"
                android:visibility="visible"
                android:contentDescription="@string/accessibility_no_action"
                />

            <ImageView
                android:id="@+id/indicator_depth_2"
                android:layout_width="@dimen/px20"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px4"
                android:background="#ffff0000"
                android:visibility="visible"
                android:contentDescription="@string/accessibility_no_action"
                />

            <ImageView
                android:id="@+id/indicator_depth_1"
                android:layout_width="@dimen/px20"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px4"
                android:background="#ffffff00"
                android:visibility="visible"
                android:contentDescription="@string/accessibility_no_action"
                />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>