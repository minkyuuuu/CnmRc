<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px19" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <View
            android:layout_width="@dimen/px20"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <!-- 1) up -->

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" >

                <ImageButton
                    android:id="@+id/fourway_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/fourwayup"
                    android:contentDescription="@string/accessibility_general_button" />

                <ImageView
                    android:id="@+id/anim_fourway_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:background="@drawable/anim_tappress"
                    android:contentDescription="@string/accessibility_general_button"
                    android:visibility="invisible" />
            </FrameLayout>

            <!-- 2) right -->

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" >

                <ImageButton
                    android:id="@+id/fourway_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/fourwayright"
                    android:contentDescription="@string/accessibility_general_button" />

                <ImageView
                    android:id="@+id/anim_fourway_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/anim_tappress"
                    android:contentDescription="@string/accessibility_general_button"
                    android:visibility="invisible" />
            </FrameLayout>

            <!-- 3) down -->

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" >

                <ImageButton
                    android:id="@+id/fourway_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/fourwaydown"
                    android:contentDescription="@string/accessibility_general_button" />

                <ImageView
                    android:id="@+id/anim_fourway_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:background="@drawable/anim_tappress"
                    android:contentDescription="@string/accessibility_general_button"
                    android:visibility="invisible" />
            </FrameLayout>

            <!-- 4) left -->

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" >

                <ImageButton
                    android:id="@+id/fourway_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/fourwayleft"
                    android:contentDescription="@string/accessibility_general_button" />

                <ImageView
                    android:id="@+id/anim_fourway_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:background="@drawable/anim_tappress"
                    android:contentDescription="@string/accessibility_general_button"
                    android:visibility="invisible" />
            </FrameLayout>

            <!-- ok button -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <ImageButton
                    android:id="@+id/fourway_ok"
                    android:layout_width="@dimen/px110"
                    android:layout_height="@dimen/px110"
                    android:layout_gravity="center"
                    android:background="@drawable/xml_control_ok"
                    android:contentDescription="@string/accessibility_general_button" />

                <ImageView
                    android:id="@+id/anim_fourway_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:background="@drawable/anim_tappress"
                    android:contentDescription="@string/accessibility_general_button"
                    android:visibility="invisible" />
            </FrameLayout>

        </RelativeLayout>

        <View
            android:layout_width="@dimen/px20"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px19" />

</LinearLayout>